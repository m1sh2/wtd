{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./dist/js"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/app/polyfills.ts"
  ],
  "filesGlob": [
    "./src/app/custom-typings.d.ts"
  ],

  "angularCompilerOptions": {
    "skipMetadataEmit" : true
  }
}
