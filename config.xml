<?xml version='1.0' encoding='utf-8'?>
<widget id="it.datsko.wallstodefense" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Walls To Defense</name>
    <icon src="_src/assets/images/logo-512.png" />
    <description>
        Mobile Arcade Tower Defense Game.
    </description>
    <author email="info@datsko.it" href="http://datsko.it">
        Datsko IT
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="_src/assets/images/media/android/splash-ldpi-320x200.png" density="land-ldpi"/>
        <splash src="_src/assets/images/media/android/splash-mdpi-480x320.png" density="land-mdpi"/>
        <splash src="_src/assets/images/media/android/splash-hdpi-800x480.png" density="land-hdpi"/>
        <splash src="_src/assets/images/media/android/splash-xhdpi-1280x720.png" density="land-xhdpi"/>
        <splash src="_src/assets/images/media/android/splash-xxhdpi-1600x960.png" density="land-xxhdpi"/>
        <splash src="_src/assets/images/media/android/splash-xxxhdpi-1920x1280.png" density="land-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.2.2" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0x000000ff" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="Orientation" value="landscape" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
</widget>
