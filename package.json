{
  "name": "walls-to-defense",
  "version": "1.0.5",
  "description": "Mobile arcade tower defense game.",
  "author": "Datsko IT <info@datsko.it>",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch:dev",
    "clear": "del-cli www/js && del-cli www/images && del-cli www/css",
    "watch:dev": "webpack --config ./_conf/webpack.dev.watch.js",
    "prebuild:dev": "npm run clear",
    "build:dev": "webpack --config ./_conf/webpack.dev.js",
    "prebuild:dev:android": "npm run build:dev",
    "build:dev:android": "cordova build android --debug",
    "prebuild:prod": "npm run clear",
    "build:prod": "webpack --config ./_conf/webpack.prod.js",
    "prebuild:prod:android": "npm run build:prod",
    "build:prod:android": "cordova build android --release -- --keystore=\"../../keys/release.keystore\" --alias=release",
    "test": "standard"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.2",
    "browser-sync-webpack-plugin": "^1.1.3",
    "css-loader": "^0.26.1",
    "del-cli": "^0.2.1",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "standard": "^8.6.0",
    "style-loader": "^0.13.1",
    "webfontloader": "^1.6.27",
    "webpack": "^1.13.3",
    "webpack-merge": "^2.0.0"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "phaser-ce": "^2.7.1"
  }
}
